        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00A267" Offset="0"/>
                <GradientStop Color="#FF00A267" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Author " HorizontalAlignment="Left" Margin="21,21,0,0" VerticalAlignment="Top"/>
        <Label Content="Book Name" HorizontalAlignment="Left" Margin="21,67,0,0" VerticalAlignment="Top"/>
        <Label Content="Year" HorizontalAlignment="Left" Margin="21,118,0,0" VerticalAlignment="Top"/>
